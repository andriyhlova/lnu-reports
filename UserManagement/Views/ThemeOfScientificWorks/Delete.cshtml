@model UserManagement.Models.db.ThemeOfScientificWork

@{
    ViewBag.Title = "Видалити";
}

<h2>Видалити</h2>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <h4>Наукова робота</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Тема наукової роботи
        <dt>

        <dd>
            @Html.DisplayFor(model => model.ThemeNumber)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.ScientificHead)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.PeriodFrom)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.PeriodTo)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутись до списку", "Index")
        </div>
    }
</div>

@model UserManagement.Models.RegisterViewModel
@{
    ViewBag.Title = "Реєстрація";
}

<h2>@ViewBag.Title.</h2>



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Факультет</label>
        <select id="faculty-selector" class="form-control chosen-select" name="Faculty">
            <option value="">Виберіть факультет</option>
            @foreach (var faculty in ViewBag.AllFaculties)
            {
                <option value="@faculty.Id">@faculty.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Кафедра</label>
        <select id="cathedra-selector" class="form-control chosen-select" name="Cathedra">
            <option value="">Виберіть кафедру</option>
            @foreach (var cathedra in ViewBag.AllCathedras)
            {
                <option value="@cathedra.Id" data-faculty="@cathedra.Faculty.Id">@cathedra.Name</option>
            }
        </select>
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="button" type="submit" class="btn btn-default" value="Зареєструвати" />
        </div>
    </div>
}
<link rel="stylesheet" href="../Scripts/docsupport/style.css">
<link rel="stylesheet" href="../Scripts/docsupport/prism.css">
<link rel="stylesheet" href="../Scripts/chosen.css">
<style type="text/css" media="all">
    /* fix rtl for demo */
    .chosen-rtl .chosen-drop {
        left: -9000px;
    }

    .chosen-container {
        margin-left: 15px;
    }
</style>

@section Scripts {
    <script src="../Scripts/chosen.jquery.js" type="text/javascript"></script>
    <script src="../Scripts/docsupport/prism.js" type="text/javascript" charset="utf-8"></script>

    <script type="text/javascript">
        let cathedrasSelectOptions = document.getElementById("cathedra-selector").options;
        var opts = [];
        for (var i = 0; i < cathedrasSelectOptions.length; i++) {
            opts.push({ value: cathedrasSelectOptions[i].value, faculty: cathedrasSelectOptions[i].dataset.faculty, text: cathedrasSelectOptions[i].text  });
        }
        function updateSelect() {
            $('.chosen-select').chosen(
                {
                    placeholder_text_single: "Виберіть...",
                    disable_search_threshold: 10,
                    no_results_text: 'Не знайдено'
                }
            );
        }
        function addFacultyPickerListener() {
            let facultyElem = document.getElementById("faculty-selector");
            $('#faculty-selector').change(function (e) {
                var str = "<option value=''>Виберіть кафедру</option>";
                    for (var i = 0; i < opts.length; i++) {
                        if (facultyElem.value == '' || opts[i].faculty == facultyElem.value) {
                            str += `<option value='${opts[i].value}' data-faculty='${opts[i].faculty}'>${opts[i].text}</option>`;
                        }
                    }
                $("#cathedra-selector").html(str);
                $("#cathedra-selector").trigger("chosen:updated");
            });
        }
        function notification() {
            const validation = document.getElementsByClassName('.text-danger');
            console.log(validation)
            $("#button").click(function () {
                alert('button clicked');
            }
            );
        }
        updateSelect();
        addFacultyPickerListener();

    </script>
    @Scripts.Render("~/bundles/jqueryval")
}

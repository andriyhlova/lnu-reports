@using SRS.Services.Extensions
@using SRS.Services.Models.ThemeOfScientificWorkModels
@model ThemeOfScientificWorkModel

@{
    ViewBag.Title = "Деактивувати";
}

<h2>Деактивувати</h2>

<h3>Ви впевнені, що хочете деактивувати це?</h3>
<div>
    <h4>Тематичний план</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номер державної реєстрації
        <dt>
        <dd>
            @Html.DisplayFor(model => model.ThemeNumber)
        </dd>
        <dt>
            Внутрішній шифр
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt>
            Назва
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt>
            Тип проєкту
        </dt>
        <dd>
            @Model.Financial.GetDisplayName()
        </dd>
        <dt>
            Інший тип
        </dt>
        <dd>
            @Model.OtherProjectType
        </dd>
        <dt>
            Підкатегорія
        </dt>
        <dd>
            @(Model.SubCategory != null ? Model.SubCategory.GetDisplayName() : null)
        </dd>
        <dt>
            Фінансування за роками
        </dt>
        <dd>
            @for (var i = 0; i < Model.ThemeOfScientificWorkFinancials.Count; i++)
            {
                <div>@Model.ThemeOfScientificWorkFinancials[i].Year рік - @Model.ThemeOfScientificWorkFinancials[i].Amount грн </div>
            }
        </dd>
        <dt>
            Науковий керівник
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ScientificHead)
        </dd>
        <dt>
            Період виконання
        </dt>
        <dd>
        </dd>
        <dt>
            З
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PeriodFrom)
        </dd>
        <dt>
            По
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PeriodTo)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Деактивувати" class="btn btn-danger" /> |
            @Html.ActionLink("Повернутись до списку", "Index", new { IsActive = true })
        </div>
    }
</div>

@using SRS.Services.Models
@model CathedraModel

@{
    ViewBag.Title = "Редагувати";
}

<h2>Редагувати</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Кафедра</h4>
        @{Html.RenderPartial("Common/RequiredFieldsInfo");}
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Назва <span class="text-danger">*</span></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="GenitiveCase" class="control-label col-md-2">Родовий відмінок</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GenitiveCase, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GenitiveCase, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Факультет</label>
            <div class="col-md-10">
                <select id="faculty-selector" class="form-control chosen-select" name="FacultyId">
                    <option value="">Виберіть факультет</option>
                    @foreach (var faculty in ViewBag.AllFaculties)
                    {
                        <option value="@faculty.Id" selected="@(faculty.Id == Model.FacultyId)">@faculty.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутися до списку", "Index")
</div>

@section Styles {
    @Styles.Render("~/Content/chosen/bundle")
    @Styles.Render("~/Content/relatedEntity/bundle")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/chosen")
    @Scripts.Render("~/bundles/relatedEntityComponent")
    @Scripts.Render("~/bundles/departmentSelector")
    @Scripts.Render("~/bundles/themeofscientificworks/edit")
}

@using SRS.Services.Providers
@model SRS.Services.Models.UserInfoModel

@{
    ViewBag.Title = "Деталі";
}

<h2>Деталі</h2>

<div>
    <h4>Користувач</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        @foreach (var i in Model.I18nUserInitials)
        {
            <dt>
                Ім'я (@i.Language.ToString())
            </dt>
            <dd>
                @i.FirstName
            </dd>

            <dt>
                По батькові (@i.Language.ToString())
            </dt>
            <dd>
                @i.FathersName
            </dd>

            <dt>
                Прізвище (@i.Language.ToString())
            </dt>
            <dd>
                @i.LastName
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GraduationDate)
        </dt>

        <dd>
            @(Model.GraduationDate.HasValue ? Model.GraduationDate.Value.Year : (int?)null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DefenseYear)
        </dt>

        <dd>
            @(Model.DefenseYear.HasValue ? Model.DefenseYear.Value.Year : (int?)null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AwardingDate)
        </dt>

        <dd>
            @(Model.AwardingDate.HasValue ? Model.AwardingDate.Value.Year : (int?)null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CathedraName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CathedraName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FacultyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FacultyName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AcademicStatusName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AcademicStatusName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ScienceDegreeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ScienceDegreeName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PositionName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PositionName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RoleIds)
        </dt>

        <dd>
            @foreach (var role in Model.RoleIds)
            {
                <div>@RolesProvider.AllRoles[role]</div>
            }
        </dd>
    </dl>
</div>
<p>
    @if (Model.Email != User.Identity.Name)
    {
        @Html.ActionLink("Редагувати", "Edit", new { id = Model.Id })
        <span>|</span>
    }

    @Html.ActionLink("Назад до списку", "Index")
</p>
